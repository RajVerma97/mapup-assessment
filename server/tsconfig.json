{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2016", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@types/*": ["types/*"]
    }
  },
  "include": ["src/**/*.ts",  "./workers/workers.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
