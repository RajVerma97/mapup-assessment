{
  "compilerOptions": {
    "target": "es2020",
    "module": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@types/*": ["types/*"]
    }
  },
  "include": ["src/**/*.ts", "./workers/workers.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
