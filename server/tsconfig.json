{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": ["es2016", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "/",
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["*.ts", "api/**/*.ts", "workers/workers.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
